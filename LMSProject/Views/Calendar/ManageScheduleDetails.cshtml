@model LMSProject.Controllers.ManageScheduleDetailsViewModel

@{
    ViewBag.Title = "ManageScheduleDetails";
}

<h2>ManageScheduleDetails</h2>

<p>
    @Html.ActionLink("Create New", "CreateScheduleDetail", new { id = Model.scheduleID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.details.FirstOrDefault().schedules.scheduleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.FirstOrDefault().tasks.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.FirstOrDefault().startTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.FirstOrDefault().endTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.FirstOrDefault().name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details.FirstOrDefault().room)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.details) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.schedules.scheduleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tasks.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.room)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditScheduleDetail", new { id=item.scheduleDetailID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.scheduleDetailID }) |*@
            @Html.ActionLink("Delete", "DeleteScheduleDetail", new { id=item.scheduleDetailID })
        </td>
    </tr>
}

</table>
