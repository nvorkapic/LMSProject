            '{',
            (int)d.startTime.DayOfWeek * 100 + 100,
            d.startTime.Hour * 100 + ((100 / 60) * d.startTime.Minute),
            '}');/*(d.endTime - d.startTime).TotalMinutes * (100/60) + 40,'}');*/

        @Html.Raw(css_id);
    }
</style>
<h2>Calendar</h2>


<table>
    <thead>
        <tr class="calendarHeader">
            <th>&nbsp;</th>
            <th>Sunday</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var d in Model)
    {
            <div class="scheduleDetail" id="detail@{@d.scheduleDetailID}">@d.startTime.ToShortTimeString(), @d.endTime.ToShortTimeString()</div>
