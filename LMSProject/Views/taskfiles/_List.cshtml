@model IEnumerable<LMSProject.Models.file>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.folders.name)*@
            Folder Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.tasks.name)*@
            Task Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.name)*@
            File Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.path)*@
            File Path
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.folders.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tasks.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.path)
        </td>
        <td>
            @Html.ActionLink("Download", "Download", new { filePath = item.path }, new {@class ="btn btn-default"}) |
            @Html.ActionLink("Edit", "Edit", new { id=item.fileID }, new {@class ="btn btn-default"}) |
            @Html.ActionLink("Details", "Details", new { id=item.fileID }, new {@class ="btn btn-default"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.fileID }, new {@class ="btn btn-danger"}) 
        </td>
    </tr>
}

</table>
